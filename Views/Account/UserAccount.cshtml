                    <div class="row justify-content-center">
                        @if (campaigns.Count() == 0)
                        {
                            <h3>The user has no campaigns</h3>
                        }
                        else
                        {
                            @foreach (var campaign in campaigns)
                            {
                                <div class="flex-column m-1 text-align-center">
                                    <div class="card text-align-center bg-dark text-white" 
                                         style="width: 240px;">
                                        <img style="width: 100%; height: 200px" class="text-align-center" 
                                             src="@campaign.ImageGalleryUrl" alt="@campaign.Name">
                                        <div class="card-body">
                                            <div>
                                                <h5 class="card-title">@campaign.Name</h5>
                                            </div>
                                            <p class="card-text">@campaign.ShortDescription</p>
                                            <a asp-action="campaign" asp-controller="campaigns"
                                               asp-route-id="@campaign.Id" class="btn btn-primary">
                                                More
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
