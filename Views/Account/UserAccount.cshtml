@model UserAccountViewModel
@{ 
    ViewBag.Title = Model.UserToShow.Nickname;
}

<h2 style="width: initial">@Model.UserToShow.Nickname</h2>
<span class="card-text">Registered: @Model.UserToShow.RegistrationDate.ToShortDateString()</span>
<div style="padding-top: 30px"> 
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" href="#">Projects</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">@Model.UserToShow.DateOfBirth.ToShortDateString()</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Link</a>
        </li>
        <li class="nav-item">
            <a class="nav-link disabled" href="#">Disabled</a>
        </li>
    </ul>
    <div class="card-group">
        @foreach (var campaign in Model.UserToShow.Campaigns.OrderBy(campaign => campaign.RegistrationDate))
        {
            <div class="card-header-tabs">@campaign.Name</div>
        }
    </div>
</div>