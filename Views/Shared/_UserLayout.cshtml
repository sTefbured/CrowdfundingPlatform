@inject  SignInManager<ApplicationUser> signInManager;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title &middot; CrowdIO</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
        <div class="container text-align-center">
            <a class="navbar-brand unmarkable" href="~/home">CrowdIO</a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="~/home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/campaigns/list">Campaigns</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/campaigns/create">Create campaign</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/about">About</a>
                    </li>
                </ul>
                <div class="navbar-nav">
                    <form class="form-inline">
                        <input class="form-control m-sm-auto" type="search"
                               placeholder="Search" aria-label="Search">
                    </form>
                    <ul class="navbar-nav">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                @{
                                    var userId = signInManager.UserManager.GetUserId(User);
                                    var user = signInManager.UserManager.Users.FirstOrDefault(user =>
                                        user.Id == userId
                                    );
                                }
                                <a class="nav-link btn btn-link" href="~/user/@user.Identifier">
                                    @User.Identity.Name
                                </a>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-controller="account" asp-action="logout">
                                    <button type="submit" class="navbar-text nav-link btn btn-link">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="~/account/register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/account/login">Log in</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container bg-white">
        <div id="mainBlock">
            @RenderBody()
        </div>
    </div>

    <div class="container height-70"><hr class="border-dark" /></div>

    <footer class="card-footer bg-light fixed-bottom">
        <div class="container-lg">
            <ul class="list-unstyled d-flex">
                <li class="nav-item flex-fill footer-list-item">
                    <a href="#" class="nav-link text-dark">Terms</a>
                </li>

                <li class="nav-item flex-fill footer-list-item">
                    <a href="#" class="nav-link text-dark">About</a>
                </li>

                <li class="nav-item flex-fill footer-list-item">
                    <a href="#" class="nav-link text-dark">Contacts</a>
                </li>
            </ul>
            <div class="container-lg nav-item navbar-text flex-fill footer-list-item fixed-bottom">
                <font color="gray">&copy; CrowdIO 2020</font>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", true);
    }
</body>
</html>