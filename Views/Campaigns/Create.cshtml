@model CreateCampaignViewModel
@{
    ViewBag.Title = "Create a campaign";
}

<h1>Create a campaign</h1>

<div class="row">
    <div class="col-md-12">
        <form enctype="multipart/form-data" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Campaign.Name"></label>
                <input asp-for="Campaign.Name" class="form-control" />
                <span asp-validation-for="Campaign.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image"></label>
                <div class="custom-file">
                    <input asp-for="Image" class="form-control custom-file-input" />
                    <label class="custom-file-label">Choose file</label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Campaign.ShortDescription"></label>
                <input asp-for="Campaign.ShortDescription" class="form-control" />
                <span asp-validation-for="Campaign.ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Campaign.FullDescription"></label>
                <textarea rows="10" asp-for="Campaign.FullDescription" class="form-control"></textarea>
                <span asp-validation-for="Campaign.FullDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Campaign.MoneyGoal"></label>
                <input asp-for="Campaign.MoneyGoal" class="form-control" />
                <span asp-validation-for="Campaign.MoneyGoal" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>

        @section Scripts {
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var filename = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(filename);
                    });
                })
            </script>
        }
    </div>
</div>